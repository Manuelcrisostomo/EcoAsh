<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <ListView
        android:id="@+id/listViewDispositivos"
        android:layout_width="match_parent"
        android:layout_height="109dp" />

    <!-- Campos de Texto para los Sensores -->
    <!-- Cambios a TextView si solo es para mostrar información sin edición -->
    <LinearLayout
        android:layout_width="376dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity=""
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etComuna"
            android:layout_width="191dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:hint="Comuna" />

        <EditText
            android:id="@+id/etCalle"
            android:layout_width="187dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:hint="Calle" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="378dp"
        android:layout_height="63dp"
        android:layout_marginTop="16dp"
        android:gravity=""
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etSector"
            android:layout_width="193dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:hint="Sector" />


        <EditText
            android:id="@+id/etDispositivo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:hint="Dispositivo" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="376dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity=""
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etPM25"
            android:layout_width="197dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:hint="PM2.5" />

        <EditText
            android:id="@+id/etPM10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="PM10"
            android:layout_marginBottom="8dp" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="376dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity=""
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etCO2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:hint="CO2" />

        <EditText
            android:id="@+id/etCO"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="CO"
            android:layout_marginBottom="8dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="376dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:gravity=""
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etMonoxidoCarbono"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:hint="Monóxido de Carbono" />

        <EditText
            android:id="@+id/etTemperatura"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:hint="Temperatura" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="376dp"
        android:layout_height="51dp"
        android:layout_marginTop="16dp"
        android:gravity=""
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etHumedad"
            android:layout_width="204dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:hint="Humedad" />

        <EditText
            android:id="@+id/etNivelCenizas"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:hint="Nivel de Cenizas" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="376dp"
        android:layout_height="51dp"
        android:layout_marginTop="16dp"
        android:gravity=""
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etUVRadiacion"
            android:layout_width="206dp"
            android:layout_height="wrap_content"
            android:hint="Radiación UV" />

        <EditText
            android:id="@+id/etClima"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Clima (Soleado, Nublado...)" />




    </LinearLayout>
    <EditText
        android:id="@+id/etVelocidadViento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Velocidad del Viento (km/h)" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity=""
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Botón Agregar -->
        <Button
            android:id="@+id/btnAgregar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@color/Agregar"
            android:text="Agregar"
            android:textColor="@color/TextBotones" />

        <!-- Botón Actualizar -->
        <Button
            android:id="@+id/btnActualizar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@color/Actualizar"
            android:enabled="false"
            android:text="Actualizar"
            android:textColor="@color/TextBotones" />

        <!-- Botón Borrar -->
        <Button
            android:id="@+id/btnBorrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@color/Eliminar"
            android:enabled="false"
            android:text="Borrar"
            android:textColor="@color/TextBotones" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity=""
        android:orientation="horizontal"
        android:padding="16dp">
        <!-- Botón Volver Atrás -->
        <Button
            android:id="@+id/btnBack"
            android:layout_width="101dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:backgroundTint="@color/Volver"
            android:text="Volver"
            android:textColor="@color/TextBotones" />
    </LinearLayout>



</LinearLayout>
