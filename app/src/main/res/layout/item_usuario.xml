<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <!-- TextView para mostrar la comuna -->
    <TextView
        android:id="@+id/textComuna"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comuna: "
        android:textSize="16sp" />

    <!-- TextView para mostrar la calle -->
    <TextView
        android:id="@+id/textCalle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calle: "
        android:textSize="16sp" />

    <!-- TextView para mostrar el sector -->
    <TextView
        android:id="@+id/textSector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sector: "
        android:textSize="16sp" />

    <!-- TextView para mostrar el dispositivo -->
    <TextView
        android:id="@+id/textDispositivo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dispositivo: "
        android:textSize="16sp" />

</LinearLayout>
