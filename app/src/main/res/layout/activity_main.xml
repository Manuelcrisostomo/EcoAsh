<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/sustentabilidad"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardElevation="20dp"
        app:cardCornerRadius="30dp"
        android:background="@drawable/custome_editext">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/transparent"

            android:padding="24dp">


            <TextView
                android:id="@+id/hydroSafe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="EcoAsh"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="36sp"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="309dp"
                android:layout_height="170dp"
                app:srcCompat="@drawable/logo" />

            <Button
                android:id="@+id/iniciarSesion"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/VerdeAgua"
                android:textColor="@color/NegroTexto"
                android:text="Iniciar Sesion"
                android:textSize="18sp"
                app:cornerRadius="20dp" />



            <Button
                android:id="@+id/Registrarse"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/VerdeAgua"
                android:textColor="@color/NegroTexto"
                android:text="Registrase"
                android:textSize="18sp"
                app:cornerRadius="20dp"/>

            <!-- Botón Salir Atrás -->
            <Button
                android:id="@+id/btnSalir"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/VerdeAgua"
                android:textColor="@color/NegroTexto"
                android:text="Salir"
                android:textSize="18sp"
                app:cornerRadius="20dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
